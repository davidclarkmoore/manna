
<%= link_to 'Back to Home', posts_path %> 

<%= form_for @post do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

    <% unless @post.image_file_name.blank? %>

        <%= image_tag @post.image.url(:medium) %>

        <b>Replace image by uploading a new one...</b>
        
   <% end %>
 

   <%= f.file_field :image %>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

    <p>
    <%= f.label :format %><br>
    <%= f.text_field :format %>
  </p>

      <p>
    <%= f.label :length %><br>
    <%= f.text_field :length %>
  </p>

      <p>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </p>


      <p>
    <%= f.label 'Video Embed Code' %><br>
    <%= f.text_area :video %>
  </p>

  
 
    <%= f.submit :class => 'btn btn-primary' %>
  

<% end %>